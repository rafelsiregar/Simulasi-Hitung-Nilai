<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Main6Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/school_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/school_input_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Masukkan nama Sekolah"></TextView>

            <EditText
                android:id="@+id/school_name_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"></EditText>

            <TextView
                android:id="@+id/unas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rerata ujian Nasional"
                android:textSize="8pt"></TextView>

            <TextView
                android:id="@+id/bindo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="Bahasa Indonesia"></TextView>

            <EditText
                android:id="@+id/nilai_bindo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/binggris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="Bahasa Inggris"></TextView>

            <EditText
                android:id="@+id/nilai_bing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/matematika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Matematika"></TextView>

            <EditText
                android:id="@+id/nilai_matematika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/peminatan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Mata Pelajaran Peminatan 1"></TextView>

            <EditText
                android:id="@+id/nilai_peminatan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/peminatan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Mata Pelajaran Peminatan 2"></TextView>

            <EditText
                android:id="@+id/nilai_peminatan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/peminatan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Mata Pelajaran Peminatan 3"></TextView>

            <EditText
                android:id="@+id/nilai_peminatan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/school_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/school_input_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Masukkan nama Sekolah"></TextView>

            <EditText
                android:id="@+id/school_name_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"></EditText>

            <TextView
                android:id="@+id/unas_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rerata ujian Nasional"
                android:textSize="8pt"></TextView>

            <TextView
                android:id="@+id/bindo_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="Bahasa Indonesia"></TextView>

            <EditText
                android:id="@+id/nilai_bindo_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/binggris_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="Bahasa Inggris"></TextView>

            <EditText
                android:id="@+id/nilai_bing_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/matematika_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Matematika"></TextView>

            <EditText
                android:id="@+id/nilai_matematika_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/peminatan1_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Mata Pelajaran Peminatan 1"></TextView>

            <EditText
                android:id="@+id/nilai_peminatan1_b"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/peminatan2_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Mata Pelajaran Peminatan 2"></TextView>

            <EditText
                android:id="@+id/nilai_peminatan2_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>

            <TextView
                android:id="@+id/peminatan3_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:text="Mata Pelajaran Peminatan 3"></TextView>

            <EditText
                android:id="@+id/nilai_peminatan3_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"></EditText>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10pt"
        android:text="Bandingkan">
    </Button>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Home">
    </Button>

    <TextView
        android:id = "@+id/hasilbanding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=""
        android:layout_marginTop="4pt"
        android:layout_below = "@+id/compare"
        android:textSize="9pt"
        android:textColor="#191970">
    </TextView>
</LinearLayout>