<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


                <TextView
                    android:id="@+id/pilihan_ganda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Ganda"
                    android:textColor="#191970"
                    android:textSize="12pt" />


            <EditText
                    android:id="@+id/skor_pilgan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Jumlah betul"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/bobot_pilgan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Bobot"
                    android:textColor="#330066"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/soal_pilgan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Jumlah soal"
                    android:textColor="#3333FF"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/isian_singkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Isian Singkat"
                    android:textColor="#191970"
                    android:textSize="12pt" />

                <EditText
                    android:id="@+id/skor_isian_singkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Jumlah betul"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/bobot_isian_singkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Bobot"
                    android:textColor="#330066"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/soal_isian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Jumlah soal"
                    android:textColor="#3333FF"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/essay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uraian"
                    android:textColor="#191970"
                    android:textSize="12pt" />

                <EditText
                    android:id="@+id/skorEssay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Total Skor"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/maxEssay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Skor Maksimum"
                    android:textColor="#3333FF"
                    android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembobotan"
                android:textSize="8pt"
                android:textColor="#191970"/>

            <RadioGroup
                android:id = "@+id/pilih"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below ="@+id/textView3">

                <RadioButton
                    android:id="@+id/Angka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Angka" />

                <RadioButton
                    android:id="@+id/Persen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persen"
                    android:checked="false"/>
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Penilaian"
                android:textSize="8pt"
                android:textColor="#191970"/>

            <RadioGroup
                android:id ="@+id/Method"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below = "@+id/textView5">

                <RadioButton
                    android:id="@+id/Bulat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Nilai Bulat" />

                <RadioButton
                    android:id="@+id/Satu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="Satu Angka di Belakang Koma" />

                <RadioButton
                    android:id="@+id/Dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="Dua Angka di Belakang Koma" />
            </RadioGroup>

            <Button
                    android:id="@+id/input_nilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Input" />

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Home" />

                <TextView
                    android:id="@+id/NilaiAkhir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_nilai"
                    android:text=""
                    android:textColor="#990000"
                    android:textSize="15pt" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>